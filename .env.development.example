# Application Configuration
# ========================

# Application name
APP_NAME=DDD Payment Boilerplate

# Node environment (development, test, production)
NODE_ENV=development

# Application URL
APP_URL=http://localhost:3000

# Application port
APP_PORT=3000

# Log level (error, warn, info, debug, trace)
APP_LOG_LEVEL=info

# API prefix
API_PREFIX=api

# Skip Swagger documentation (true/false)
APP_SKIP_SWAGGER_DOCS=false

# Database Configuration
# ======================

# Database host
# Use 'host.docker.internal' when running in Docker, 'localhost' when running locally
DB_HOST=localhost

# Database port
DB_PORT=5432

# Database username
DB_USERNAME=postgres

# Database password
DB_PASSWORD=postgres

# Database name
DB_DATABASE=ddd_payment_boilerplate

# Enable database synchronization (auto-create/update tables)
# WARNING: Set to false in production!
DB_SYNCHRONIZE=true

# Enable database query logging
DB_LOGGING=true
